# ===========================================
# Products Demo API - Environment Variables
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3000
REQUEST_TIMEOUT=30000
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Database Configuration
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=ProductsDemo
DB_USER=sa
DB_PASSWORD=YourPassword123
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true
DB_CONNECTION_TIMEOUT=60000
DB_REQUEST_TIMEOUT=60000
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_IDLE_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-and-make-it-long-and-random
JWT_EXPIRES_IN=24h

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info

# Swagger Documentation (set to 'true' to enable in production)
ENABLE_SWAGGER=false
SWAGGER_CLIENT_ID=products-demo-api-client
SWAGGER_CLIENT_SECRET=your-client-secret

# Security Headers (optional overrides)
# SECURITY_CONTENT_SECURITY_POLICY=true
# SECURITY_CROSS_ORIGIN_EMBEDDER_POLICY=false

# Performance Settings
# COMPRESSION_LEVEL=6
# COMPRESSION_THRESHOLD=1024